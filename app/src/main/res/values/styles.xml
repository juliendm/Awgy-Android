<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppThemePopUpClose" parent="AppTheme">
        <item name="android:homeAsUpIndicator">@drawable/close</item>
        <item name="colorPrimary">#ff474747</item>
        <item name="colorAccent">#ff474747</item>
    </style>

    <style name="AppThemePopUpBack" parent="AppTheme">
        <item name="colorPrimary">#ff474747</item>
        <item name="colorAccent">#ff474747</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>tem>
